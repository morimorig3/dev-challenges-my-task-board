generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String? @default("")
  status      String
  type        String
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id       Int    @id @default(autoincrement())
  password String
  tasks    Task[]
}
